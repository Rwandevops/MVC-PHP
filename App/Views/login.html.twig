{# index view #} {% extends 'base.html.twig' %} {% block body %}
{{ error.get() | raw }}

<div class="container mb-5 mt-5">
  <div class="row justify-content-center align-items-center pb-5">
    <div class="col-md-6 mt-5  text-center">
      <form class="form-signin mt-5" method="POST">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <div class="form-group"></div>
        <label for="inputEmail" class="sr-only">Email address</label>
        <input
          type="email"
          id="inputEmail"
          name="email"
          class="form-control mt-5"
          placeholder="Email address"
          required
          autofocus
        />
        <label for="inputPassword" class="sr-only">Password</label>
        <input
          type="password"
          id="inputPassword"
          name="password"
          class="form-control"
          placeholder="Password"
          required
        />
        <div class="checkbox mb-3 mt-4">
          <label>
            <input type="checkbox" value="remember-me" /> Remember me
          </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block mb-5" type="submit">
          Sign in
        </button>

        <p class="mt-5 mb-5 text-muted">&copy; 2017-2019</p>
      </form>
    </div>
  </div>
</div>
{% endblock %}
